{
  "name": "trackd",
  "version": "1.0",
  "description": "A extension for work tracking",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "sessions",
    "storage"
  ],
  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
